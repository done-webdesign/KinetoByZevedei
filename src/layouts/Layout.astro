---
import Header from "../components/header.astro";
import Tiktok from "../assets/icons/tiktok-icon.svg";
import Insta from "../assets/icons/insta-icon.svg";
import Image from "astro/components/Image.astro";
import "../styles/global.css";
import Footer from "../components/footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/small-logo.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      Masaj Terapeutic, Kinetoterapie & Dry Needling în București | Kineto By
      Zevedei
    </title>
    <meta
      name="description"
      content="Licențiat UMF Carol Davila, ofer masaj terapeutic, dry needling, acupunctură și chiropractica în București. Tratamente personalizate pentru dureri, relaxare și recuperare fizică."
    />
    <meta
      name="keywords"
      content="masaj terapeutic București, fizioterapie, kinetoterapie, dry needling, acupunctură, chiropractica, recuperare fizică, dureri musculare, terapie fizică, Zevedei Terapie"
    />
    <meta
      property="og:title"
      content="Masaj Terapeutic & Kinetoterapie în București | Kineto By Zevedei"
    />
    <meta
      property="og:description"
      content="Servicii personalizate de masaj terapeutic, dry needling, chiropractica și acupunctură pentru relaxare, dureri musculare și recuperare fizică în București."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kinetobyzevedei.com/" />
    <meta
      property="og:image"
      content="https://kinetobyzevedei.com/small-logo.jpg"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100..700;1,100..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <link href="src/styles/global.css" rel="stylesheet" />
  </head>
  <body>
    <div
      class="head-social hidden lg:flex justify-end self-stretch items-center"
    >
      <Image src={Tiktok} alt="Tiktok icon for social page" />
      <p>
        Tik Tok : <a
          target="_blank"
          class="social"
          href="https://www.tiktok.com/@kineto.by.zevedei">kineto.by.zevedei</a
        >
      </p>
      <Image src={Insta} alt="Instagram icon for social page" />
      <p>
        Insta : <a
          target="_blank"
          class="social"
          href="https://www.instagram.com/kineto.by.zevedei/"
          >kineto.by.zevedei</a
        >
      </p>
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  .social:hover {
    color: var(--secondary);
    text-decoration: underline;
  }
  html,
  body {
    scroll-behavior: smooth;
    overflow: auto;
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Poppins", sans-serif !important;
  }
  html {
    box-sizing: border-box;
  }

  .head-social {
    background-color: #ebebeb;
    height: 64px;
    padding: 0 88px 0 88px;
    gap: 14px;
    color: var(--textBlack);
    text-align: center;
    font-size: 16px;
    font-weight: 700;
    line-height: 24px;
  }
  @media only screen and (max-width: 1024px) {
    body {
      padding-top: 30px;
    }
  }
</style>
