<div class="margin-1"></div>
<div class="margin-2"></div>

<style>
  button:hover {
    background: var(--primary-hover);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .all-div {
    padding-top: 120px;
  }
  .margin-1 {
    background-color: var(--components);
    border-bottom: 1px solid var(--PR1, #257d7f);
    height: 100px;
  }
  .margin-2 {
    background-color: var(--components);
    height: 100px;
  }

  .container-like {
    border-top: 1px solid var(--primary);
  }
  .text-med {
    color: var(--text);
    font-size: 16px;
    font-weight: 700;
    line-height: 12px; /* 75% */
  }
  .not-text {
    color: var(--backgroundGrey);
    text-align: center;
    font-size: 24px;
    font-weight: 200;
    line-height: normal;
  }
  .small-text {
    color: var(--text);
    font-size: 12px;
    font-weight: 200;
    line-height: normal;
  }
  .text-btn {
    color: var(--text);
    font-size: 12px;
    font-weight: 600;
    line-height: 12px; /* 100% */
  }
  .btn-get {
    background-color: var(--primary);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
  .image-contaier {
    width: 300px;
    height: 300px;
    contain: content;
    border-radius: 24px;
    border: 1px solid var(--primary);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
  @media only screen and (max-width: 1024px) {
    .image-contaier {
      width: 200px !important;
      height: 200px !important;
    }
  }
  .text-service {
    bottom: 120px;
    left: 10px;
    color: var(--text);
    text-align: center;
    font-size: 24px;
    font-weight: 300;
    line-height: normal;
  }
  .text-service-4 {
    bottom: 120px;
    color: var(--text);
    text-align: center;
    font-size: 24px;
    font-weight: 300;
    line-height: normal;
  }
  .text-service-2 {
    bottom: 120px;
    right: 10px;
    color: var(--text);
    text-align: center;
    font-size: 24px;
    font-weight: 300;
    line-height: normal;
  }
  .text-service-3 {
    bottom: 120px;
    left: 50px;
    color: var(--text);
    text-align: center;
    font-size: 24px;
    font-weight: 300;
    line-height: normal;
  }

  .heading {
    color: var(--text);
    text-align: center;
    font-size: 40px;
    font-weight: 175;
    line-height: normal;
    letter-spacing: -0.205px;
  }
  @media only screen and (max-width: 1024px) {
    .heading {
      font-size: 32px;
    }
    .text-service,
    .text-service-2,
    .text-service-3,
    .text-service-4 {
      font-size: 14px !important;

      right: 0 !important;
      text-align: center !important;
      bottom: 0 !important;
      left: 0 !important;
      justify-self: center;
      align-self: anchor-center;
    }
    button {
      width: max-content;
    }
    .text-btn {
      font-size: 10px !important;
    }
  }
  .bg-components {
    background-color: var(--components);
  }
</style>
