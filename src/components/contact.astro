---
import ContactForm from "./contact-form";
---

<div class="margin-top"></div>
<div class="py-24 flex justify-center items-center">
  <div class="background-1 in-view"></div>

  <ContactForm client:load />

  <div class="background-2 in-view"></div>
</div>
<div
  class="margin-bottom flex flex-col justify-center items-center p-2.5 gap-11"
>
</div>
<style>
  .background-1 {
    position: relative;
    z-index: 1;
  }
  .background-1.in-view::before {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .background-1::before {
    content: "";
    background-color: var(--third);
    border-radius: 24px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    position: absolute;
    top: -220px;
    left: -80px;
    width: 200px;
    height: 200px;
    z-index: 0;
    opacity: 0;
    transform: translateY(40px) scale(0.9);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
  }
  .background-2 {
    position: relative;
    z-index: 1;
  }
  .background-2.in-view::before {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .background-2::before {
    content: "";
    background-color: var(--secondary);
    border-radius: 24px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    position: absolute;
    top: 20px;
    left: -100px;
    width: 200px;
    height: 200px;
    z-index: 0;
    opacity: 0;
    transform: translateY(40px) scale(0.9);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
  }

  .margin-top {
    height: 100px;
    border-bottom: 1px solid var(--third);
    background-color: var(--text);
  }
  .margin-bottom {
    height: 100px;
    border-top: 1px solid var(--third);
    background-color: var(--text);
  }

  @media only screen and (max-width: 1024px) {
    .background-2::before {
      top: 20px !important;
      left: -100px !important;
      width: 200px !important;
      height: 200px !important;
    }
    .background-1::before {
      top: -220px !important;
      left: -80px !important;
      width: 200px !important;
      height: 200px !important;
    }
  }

  @media only screen and (max-width: 780px) {
    .background-2::before {
      top: 70px !important;
      left: -100px !important;
      width: 130px !important;
      height: 150px !important;
    }
    .background-1::before {
      top: -220px !important;
      left: -30px !important;
      width: 130px !important;
      height: 150px !important;
    }
    .contact-title {
      color: var(--backgroundGrey);
      font-size: 10px;
      font-weight: 300;
      line-height: 24px;
    }
  }
</style>
