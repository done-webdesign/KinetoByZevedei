---
import VideoCarousel from "./videos";
---

<div class="margin-box"></div>
<div
  class="flex flex-col justify-center items-center gap-12 pt-12 pb-20 lg:px-20 px-10 container-1"
>
  <h2 class="title">Nu stii la ce sa te astepti cu kineto.by.zevedei?</h2>
  <VideoCarousel client:load />
  <div class="margin-box-2"></div>

  <style>
    @media only screen and (max-width: 1024px) {
      .background-2::before {
        bottom: -30px;
        right: -30px;
        width: 250px !important;
        height: 250px !important;
      }
      .background-3::before {
        bottom: 170px !important;
        right: -30px !important;
        width: 250px !important;
        height: 250px !important;
      }
      .background-4::before {
        bottom: -30px !important;
        left: -30px !important;
        width: 250px !important;
        height: 250px !important;
      }
      .background-1::before {
        top: -30px !important;
        left: -30px !important;
        width: 250px !important;
        height: 250px !important;
      }
      .title {
        font-size: 20px;
      }
    }
    .margin-box-2 {
      height: 100px;
    }
    .background-3 {
      position: relative;
      z-index: 1;
    }
    .background-3.in-view::before {
      opacity: 1;
      transform: translateY(0) scale(1);
    }

    .background-3::before {
      content: "";
      background-color: var(--primary);
      border-radius: 50px;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
      position: absolute;
      bottom: -50px;
      right: 90px;
      width: 550px;
      height: 250px;
      z-index: 0;
      opacity: 0;
      transform: translateY(40px) scale(0.9);
      transition:
        opacity 0.6s ease,
        transform 0.6s ease;
    }
    .background-2 {
      position: relative;
      z-index: 1;
    }
    .background-2.in-view::before {
      opacity: 1;
      transform: translateY(0) scale(1);
    }

    .background-2::before {
      content: "";
      background-color: var(--third);
      border-radius: 50px;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
      position: absolute;
      bottom: -50px;
      left: -60px;
      width: 250px;
      height: 550px;
      z-index: 0;
      opacity: 0;
      transform: translateY(40px) scale(0.9);
      transition:
        opacity 0.6s ease,
        transform 0.6s ease;
    }
    .background-1 {
      position: relative;
      z-index: 1;
    }
    .background-1.in-view::before {
      opacity: 1;
      transform: translateY(0) scale(1);
    }

    .background-1::before {
      content: "";
      background-color: var(--secondary);
      border-radius: 50px;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
      position: absolute;
      top: -50px;
      right: -60px;
      width: 600px;
      height: 250px;
      z-index: 0;
      opacity: 0;
      transform: translateY(40px) scale(0.9);
      transition:
        opacity 0.6s ease,
        transform 0.6s ease;
    }
    .banner-2 {
      position: relative;
      z-index: 100;
      border-radius: 12px;
      background: var(--components);
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    }
    .container-1 {
      border-bottom: 2px solid var(--third);
      background-color: var(--text);
    }
    .margin-box {
      height: 200px;
    }
    .title {
      color: var(--components);
      text-align: center;

      font-size: 36px;

      font-weight: 300;
      line-height: 56px; /* 155.556% */
    }
  </style>
</div>
